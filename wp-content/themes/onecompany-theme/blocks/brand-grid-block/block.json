{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "onecompany/brand-grid-block",
    "version": "0.1.0",
    "title": "OneCompany Brand Grid",
    "category": "onecompany",
    "icon": "grid-view",
    "description": "Динамічно відображає сітку брендів з можливістю фільтрації.",
    "attributes": {
        "numberOfPosts": {
            "type": "number",
            "default": 6
        },
        "selectedCategory": {
            "type": "string",
            "default": ""
        },
        "columns": {
            "type": "number",
            "default": 3
        },
        "showDescription": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "html": false
    },
    "textdomain": "onecompany-theme",
    "editorScript": "file:../../build/brand-grid-block/index.js",
    "render": "file:./render.php"
}
