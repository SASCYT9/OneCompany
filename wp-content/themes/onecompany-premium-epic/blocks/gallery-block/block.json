{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "onecompany/gallery-block",
    "version": "1.1.0",
    "title": "Галерея (Premium)",
    "category": "onecompany",
    "icon": "images-alt2",
    "description": "Створюйте преміальні галереї: сітка, слайдер або карусель з підтримкою відео та лайтбоксу.",
    "attributes": {
        "mediaItems": {
            "type": "array",
            "default": []
        },
        "galleryType": {
            "type": "string",
            "default": "grid"
        },
        "columnsDesktop": {
            "type": "number",
            "default": 3
        },
        "columnsTablet": {
            "type": "number",
            "default": 2
        },
        "columnsMobile": {
            "type": "number",
            "default": 1
        },
        "gap": {
            "type": "number",
            "default": 16
        },
        "enableLightbox": {
            "type": "boolean",
            "default": true
        },
        "sliderArrows": {
            "type": "boolean",
            "default": true
        },
        "sliderPagination": {
            "type": "boolean",
            "default": true
        },
        "sliderAutoplay": {
            "type": "boolean",
            "default": false
        },
        "sliderAutoplayDelay": {
            "type": "number",
            "default": 3000
        }
    },
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "textdomain": "onecompany-theme",
    "editorScript": "file:./index.js",
    "style": "file:./style-index.css",
    "viewScript": "file:./view.js"
}
