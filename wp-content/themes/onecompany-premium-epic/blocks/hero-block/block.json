{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "onecompany/hero-block",
    "version": "1.0.0",
    "title": "Hero Section",
    "category": "onecompany",
    "icon": "cover-image",
    "description": "Преміальна Hero-секція з відео фоном та анімаціями",
    "attributes": {
        "title": {
            "type": "string",
            "default": "ONECOMPANY"
        },
        "subtitle": {
            "type": "string",
            "default": "Преміум автомобільні аксесуари"
        },
        "videoUrl": {
            "type": "string",
            "default": ""
        },
        "accentColor": {
            "type": "string",
            "default": "#ff6b00"
        }
    },
    "supports": {
        "html": false,
        "align": ["full"]
    },
    "textdomain": "onecompany-theme",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
